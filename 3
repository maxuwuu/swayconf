sudo apt update && sudo apt install -y build-essential meson ninja-build libwayland-dev libxkbcommon-dev libpango1.0-dev libcairo2-dev libgdk-pixbuf2.0-dev libglib2.0-dev libx11-xcb-dev pkg-config git && git clone https://github.com/adi1090x/rofi-wayland.git && cd rofi-wayland && meson build && ninja -C build && sudo ninja -C build install